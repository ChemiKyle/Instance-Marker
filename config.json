{
    "name": "REDCap Instance Tagger",

    "namespace": "DCC\\REDCap_instance_tagger",

    "description": "Multiple instances of the REDCap may in use and each one needs to be clearly marked. Example Instances: production, a backup and developer. Enter in a portion of the URL that uniquely indicates which instance goes to that URL and text will be displayed by the REDCap logo indicating that particular instance of REDCap.  If an instance type is not listed there is an Other and space to fill in what should be displayed when the Other URL is used.",

    "authors": [
        {
            "name": "Greg Neils",
            "email": "gn2003@cumc.columbia.edu",
            "institution": "Columbia University"
        }
    ],

    "permissions": [
        "redcap_every_page_top"
    ],

    "system-settings": [
        {
            "key": "localhost_url",
            "name": "Localhost URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "development_url",
            "name": "Development URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "testing_url",
            "name": "Testing URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "backup_url",
            "name": "Backup URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "staging_url",
            "name": "Staging URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "other_url",
            "name": "Other URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "other_text",
            "name": "Custom Text to display for 'Other URL'",
            "required": false,
            "type": "text"
        }
    ],

    "project-settings": [
    ]
}