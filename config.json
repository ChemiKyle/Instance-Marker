{
    "name": "Instance Marker",

    "namespace": "DCC\\Instance_marker",

    "description": "Clearly differentiate REDCap instances. A short text describing the REDCap instance is dispalyed in the upper right corener of every page, and every project page (if enabled). The URL is mapped to instances such as 'Localhost', 'Development', 'Testing', and 'Backup'. The tab title is prefixed with the text for the specific instance. The module must be enabled on all projects by default in order for the instance label to appear inside projects or enabled on a project by project basis.",

    "authors": [
        {
            "name": "Greg Neils",
            "email": "gn2003@cumc.columbia.edu",
            "institution": "Columbia University"
        }
    ],

    "permissions": [
        "redcap_every_page_top"
    ],

    "system-settings": [
        {
            "key": "localhost_url",
            "name": "Localhost URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "development_url",
            "name": "Development URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "testing_url",
            "name": "Testing URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "backup_url",
            "name": "Backup URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "staging_url",
            "name": "Staging URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "other_url",
            "name": "Other URL",
            "required": false,
            "type": "text"
        },
        {
            "key": "other_text",
            "name": "Custom Text to display for 'Other URL'",
            "required": false,
            "type": "text"
        }
    ],

    "project-settings": [
    ]
}